#include <OLED_I2C.h>
OLED  ProfeOLED(SDA, SCL, 8);

const uint8_t Carga_Bateria[] PROGMEM={

0xFF, 0x01, 0xBD, 0xDD, 0xED, 0x75, 0xB9, 0xDD, 0xED, 0x75, 0xB9, 0xDD, 0xED, 0x75, 0xB9, 0xDD,   // 0x0010 (16) pixels
0xED, 0x75, 0x01, 0xFF, 0xE0, 0xE0, 0xFF, 0xE0, 0xEB, 0xED, 0xEE, 0xE7, 0xEB, 0xED, 0xEE, 0xEF,   // 0x0020 (32) pixels
0xEB, 0xED, 0xEE, 0xE7, 0xE3, 0xE1, 0xE0, 0xE0, 0xE0, 0xFF, 0xC1, 0xC1, 
};



void setup()
{
  ProfeOLED.begin();        // Inicializo la OLED
}
void loop () {
 
  ProfeOLED.drawBitmap(100, 4, Carga_Bateria, 22, 14);   // mostrar la imagen importada en OLED 128 x64
  ProfeOLED.update();                                 // Imprime en pantalla OLED
  delay(3000);                                         // retardo
}  
